<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.zero.pokedex.newAccount">

    <EditText
        android:id="@+id/editName"
        android:layout_width="254dp"
        android:layout_height="61dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="117dp"
        android:ems="10"
        android:hint="Enter Name"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteY="99dp"
        android:layout_marginLeft="53dp" />

    <EditText
        android:id="@+id/editText4"
        android:layout_width="254dp"
        android:layout_height="65dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Enter Birthdate (MM/DD/YYYY)"
        android:inputType="date"
        app:layout_constraintLeft_toLeftOf="@+id/editName"
        app:layout_constraintRight_toRightOf="@+id/editName"
        app:layout_constraintTop_toBottomOf="@+id/editName"
        tools:layout_constraintLeft_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintTop_creator="1"
        tools:layout_editor_absoluteY="190dp"
        app:layout_constraintHorizontal_bias="0.0" />

    <Button
        android:id="@+id/btnSetPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set Password"
        tools:layout_constraintTop_creator="1"
        android:layout_marginStart="53dp"
        android:layout_marginTop="49dp"
        app:layout_constraintTop_toBottomOf="@+id/editText4"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/btnQuestionaire"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="31dp"
        android:layout_marginEnd="16dp"
        android:text="Questionaire"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintBottom_creator="1"
        tools:layout_constraintRight_creator="1" />

</android.support.constraint.ConstraintLayout>
